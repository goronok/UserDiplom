<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackLogin"
    tools:context=".Fragments.MenuFragment">


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/linearTop"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageActivity"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/activity" />

                <TextView
                    android:textColor="@color/white"
                    android:text="Активности"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sandman"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/background"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageSchedule"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/schedule" />


                <TextView
                    android:textColor="@color/white"
                    android:text="Расписание"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sandman"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp">

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/background"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/background"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            </LinearLayout>




        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/linearBottom"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">



            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageMap"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/map" />

                <TextView
                    android:textColor="@color/white"
                    android:text="Карта"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sandman"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/background"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageQueue"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/queue" />


                <TextView
                    android:textColor="@color/white"
                    android:text="Моя очередь"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sandman"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageQueue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>


</FrameLayout>